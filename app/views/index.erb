<head>

<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">

</head>

<body>

	<section id="menu">

	<form action="/forgotten_password">
				<button class="buttons" type="submit" value="Forgot password?">Forgot password?</button>
			</form>

			<form action="/sessions/new">
				<button class= "buttons" type="submit" value="Sign in">Sign In</button>
			</form>

			<form action="/users/new">
				<button class="buttons" type="submit" value="Sign up">Sign Up</button>
			</form>

	</section>

	<section id="indexbody">
		<div id="new-link">
			<form action="/links" method="post">
				<input id="uri" class="forms" type="text" name="url" placeholder="Insert link here"><br>
				<input id="title" class="forms" type="text" name="title" placeholder="Title"><br>
				<input id="tags" class="forms" type="text" name="tags" placeholder="Tags"><br>
				<input id="submit" class="forms" type="submit" value="Add link" placeholder="Add Link">
			</form>
		</div>
	</section>
	
  <% @links.each do |link| %>
    <li id="links"><a href="<%= link.url %>"><h2><%= link.title %></a></h2><h4><%= link.url %></h4><br></li>
  <% end %>

</body>